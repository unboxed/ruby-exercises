<p id="notice"><%= notice %></p>

<h1>Listing Residents</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Date of birth</th>
      <th>Id number</th>
      <th>Room number</th>
      <th>House</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.full_name %></td>
        <td><%= resident.date_of_birth %></td>
        <td><%= resident.id_number %></td>
        <td><%= resident.room_number %></td>
        <% if resident.house.present? %>
          <td><%= resident.house.address %></td>
        <% else %>
          <td> Houseless </td>
        <% end %>
        <td><%= link_to 'Show', resident %></td>
        <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
        <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

